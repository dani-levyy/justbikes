<!-- http://localhost:3000/bicycles/1 -->
<%= image_tag "tour.jpg", alt: "alttext", class: "banner-img" %>
<div class="bicycle-show-flex">
  <div class="lhs-bicycle">
    <div class="bicycle-info">
      <h2 class="bicycle-header"><%= @bicycle.title %></h2>
      <h3><%= @bicycle.location %></h3>
      <h3><%= @bicycle.price %></h3>
      <h3><%= @bicycle.style %></h3>
    </div>
    <div class="bicycle-reviews">
      <h2>Reviews</h2>
      <ul>
        <% @bicycle.reviews.each do |review| %>
          <p><%= review.comment %> - <%= review.rating %></p>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="rhs-bicycle"></div>
</div>
