<div class="container">
  <div class="bicycle-form">
    <h2>Post a new review for <%= @bicycle.title %>:</h2>
    <div class="card">
      <%= simple_form_for [ @bicycle, @review ] do |f| %>
        <%= f.input :comment %>
        <%= f.input :rating %>
        <%= f.submit 'Create review', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
