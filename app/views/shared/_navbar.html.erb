<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%#= image_tag "justbikes-logo.png" %>
    <i class="fas fa-bicycle"></i>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Bicycles", bicycles_path, class: "nav-link" %>
      </li>

      <li class="nav-item dropdown">
        <% if current_user&.photo&.attached? %>
          <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle",id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
          <%= image_tag "https://picsum.photos/40/40", class: "avatar dropdown-toggle",id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <% if current_user %>
          <%= link_to "Your profile", dashboard_path, class: "dropdown-item" %>
          <%= link_to "Create a new posting", new_bicycle_path, class: "dropdown-item" %>
          <%= link_to "Edit profile", edit_user_registration_path, class: "dropdown-item" %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        <% else %>
          <%= link_to "Sign Up", new_user_registration_path, class: "dropdown-item" %>
          <%= link_to "Log In", new_user_session_path, class: "dropdown-item" %>

        <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
